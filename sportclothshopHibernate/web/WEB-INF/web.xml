<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ProductService</servlet-name>
        <servlet-class>sportsell.ProductService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListController</servlet-name>
        <servlet-class>sportsell.ListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>sportsell.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActorService</servlet-name>
        <servlet-class>sportsell.ProductService1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductController</servlet-name>
        <servlet-class>sportsell.AddProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListControllerDelete</servlet-name>
        <servlet-class>sportsell.ListControllerDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductController</servlet-name>
        <servlet-class>sportsell.DeleteProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDeleteService</servlet-name>
        <servlet-class>sportsell.ProductDeleteService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchKeywordController</servlet-name>
        <servlet-class>sportsell.SearchKeywordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductService</servlet-name>
        <url-pattern>/ProductService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListController</servlet-name>
        <url-pattern>/ListController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActorService</servlet-name>
        <url-pattern>/ActorService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductController</servlet-name>
        <url-pattern>/AddProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListControllerDelete</servlet-name>
        <url-pattern>/ListControllerDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductController</servlet-name>
        <url-pattern>/DeleteProductController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDeleteService</servlet-name>
        <url-pattern>/ProductDeleteService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchKeywordController</servlet-name>
        <url-pattern>/SearchKeywordController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
